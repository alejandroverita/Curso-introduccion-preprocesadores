mixin caja (imagen, titulo, contenido)
	.caja 
		.caja__imagen: img(src="images/"+imagen)
		.caja__contenido
			h3=titulo
			p=contenido
			

doctype html
html
	include head.pug
	body
		header
			h1 PlatziGames
			if usuario 
				a Hola #{usuario}
			else 
				a.boton Registro
block contenidos